<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TableLayout
        android:stretchColumns="*"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imgEmployee"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_employee" />

                <TextView
                    android:id="@+id/txtEmployee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_employee"
                    android:textAlignment="center"
                    android:textColor="#DC2929"
                    android:textSize="24sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/imgCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    app:srcCompat="@mipmap/ic_customer" />

                <TextView
                    android:id="@+id/txtCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_customer"
                    android:textAlignment="center"
                    android:textColor="#DC2929"
                    android:textSize="24sp" />
            </LinearLayout>
        </TableRow>
        <TableRow
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgSchedule"
                android:layout_width="200dp"
                android:layout_height="140dp"
                app:srcCompat="@mipmap/ic_schedule" />

            <TextView
                android:id="@+id/txtSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textAlignment="center"
                android:textColor="#DC2929"
                android:textSize="24sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/imgTask"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                app:srcCompat="@mipmap/ic_task" />

            <TextView
                android:id="@+id/txtTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_customer"
                android:textAlignment="center"
                android:textColor="#DC2929"
                android:textSize="24sp" />
        </LinearLayout>
    </TableRow><TableRow
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgInfo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_info" />

            <TextView
                android:id="@+id/txtInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_employee"
                android:textAlignment="center"
                android:textColor="#DC2929"
                android:textSize="24sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/imgTraining"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                app:srcCompat="@mipmap/ic_training" />

            <TextView
                android:id="@+id/txtTraining"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_customer"
                android:textAlignment="center"
                android:textColor="#DC2929"
                android:textSize="24sp" />
        </LinearLayout>
    </TableRow><TableRow
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgPolicy"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_policy" />

            <TextView
                android:id="@+id/txtPolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_employee"
                android:textAlignment="center"
                android:textColor="#DC2929"
                android:textSize="24sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/imgReward"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                app:srcCompat="@mipmap/ic_reward" />

            <TextView
                android:id="@+id/txtReward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_customer"
                android:textAlignment="center"
                android:textColor="#DC2929"
                android:textSize="24sp" />
        </LinearLayout>
    </TableRow>


    </TableLayout>

</ScrollView>